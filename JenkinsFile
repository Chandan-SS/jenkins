pipeline {
    agent any
    stages  {
        stage("build") {
            steps {
                echo "Building application.."
            }
        }
        stage ("test") {
            steps {
                echo "Testing application"
                echo "${BRANCH_NAME}"
            }
        }
        stage ("deploy") {
            when {
                expression {
                    BRANCH_NAME = "master" || BRANCH_NAME = "main"
                }
            }
            steps {
                echo "Deploying application"
            }
        }
    }
    post {
        always {
            echo "I will execute always"
        }
        failure {
            echo "Pipeline failed"
        }
        success {
            echo "Pipeline successful"
        }

    }
}
