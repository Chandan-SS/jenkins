pipeline {
    agent any
    environment {
        NEW_VERSION = '1.3.0'
        //SERVER_CREDS = credentials('server-creds-for-testing')
    }

    stages  {
        stage("build") {
            steps {
                echo "Building application.."
                echo "Building version ${NEW_VERSION}"
            }
        }
        stage ("test") {
            steps {
                echo "Testing application"
                echo "${BRANCH_NAME}"
            }
        }
        stage ("deploy") {
            when {
                expression {
                    BRANCH_NAME == "master" || BRANCH_NAME == "main"
                }
            }
            steps {
                echo "Deploying application"
                //echo "Going to use server creds for deployement: ${SERVER_CREDS}"
                withCredentials([
                    usernamePassword(credentialsId: 'server-creds-for-testing', usernameVariable: USER, passwordVariable: PSSW)
                ])  {
                        echo "UserName Var: ${USER}"
                        echo "Password Var: ${PSSW}"
                }
                
            }
        }
    }
    post {
        always {
            echo "I will execute always"
        }
        failure {
            echo "Pipeline failed"
        }
        success {
            echo "Pipeline successful"
        }

    }
}
